<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#5959f2">

    <AbsoluteLayout
    android:id="@+id/Descrp_art"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">
    <TextView
        android:id="@+id/widget37"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:text="Codigo:"
        android:hint="Codigo"
        android:textSize="18sp"
        android:layout_x="15dp"
        android:layout_y="54dp" />
    <TextView
        android:id="@+id/widget38"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:text="Descripcion"
        android:textSize="18sp"
        android:layout_x="8dp"
        android:layout_y="110dp" />
    <Button
        android:id="@+id/bto_busCod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:layout_x="381dp"
        android:layout_y="45dp" />
    <EditText
        android:id="@+id/art_SKU"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_x="145dp"
        android:layout_y="50dp"
        android:numeric="integer" />
    <EditText
        android:id="@+id/desc_art"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_x="142dp"
        android:layout_y="103dp"

        android:capitalize="sentences"

        android:focusable="true" />
    <Button
        android:id="@+id/bto_busDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:layout_x="518dp"
        android:layout_y="105dp" />

        <TextView
        android:id="@+id/widget48"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marca"
        android:textSize="18sp"
        android:layout_x="298dp"
        android:layout_y="162dp" />
    <TextView
        android:id="@+id/widget46_copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Codigo"
        android:textSize="18sp"
        android:layout_x="8dp"
        android:layout_y="154dp" />
    <TextView
        android:id="@+id/cod_muestra"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:text="Descripcion      "
        android:textSize="18sp"
        android:layout_x="99dp"
        android:layout_y="156dp" />

        <Button
        android:id="@+id/btn__selArt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccionar"
        android:layout_x="232dp"
        android:layout_y="735dp" />

        <TextView
            android:layout_width="304dp"
            android:layout_height="52dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Articulo"
            android:id="@+id/textView"
            android:layout_x="136dp"
            android:layout_y="14dp" />

        <GridView
            android:layout_width="wrap_content"
            android:layout_height="259dp"
            android:id="@+id/gridViewArt"
            android:numColumns="3"
            android:layout_x="6dp"
            android:layout_y="181dp" />

        <TextView
            android:layout_width="402dp"
            android:layout_height="46dp"
            android:text="New Text"
            android:id="@+id/txt_art_select"
            android:layout_x="127dp"
            android:layout_y="474dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar"
            android:id="@+id/btn_retorna"
            android:layout_x="86dp"
            android:layout_y="448dp"
            android:onClick="retorna_articulo" />

    </AbsoluteLayout>


</RelativeLayout>